{
    "editor.formatOnSave": false, // 全体のフォーマットを無効化
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "files.insertFinalNewline": false, // ファイル末尾に改行を追加しない
        "files.trimTrailingWhitespace": false // 行末の空白を削除しない
    },
    "[typescript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true // 保存時のフォーマットを有効化
    },
    "[json]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true // 保存時のフォーマットを有効化
    },
    "[jsonc]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true // 保存時のフォーマットを有効化
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[css]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "chat.tools.terminal.autoApprove": {
        "npm run test:run": true,
        "npm test": true
    }
}
